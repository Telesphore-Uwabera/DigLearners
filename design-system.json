{
  "name": "DigLearners Design System",
  "version": "1.0.0",
  "description": "Design system for DigLearners educational platform",
  "colors": {
    "primary": {
      "coral": "#FF677D",
      "gold": "#F8B400"
    },
    "backgrounds": {
      "gradient": "linear-gradient(135deg, #FFB3BA, #B9FBC0)",
      "white": "#FFFFFF",
      "light": "#F8F9FA"
    },
    "text": {
      "primary": "#2D3748",
      "secondary": "#4A5568",
      "muted": "#718096"
    },
    "status": {
      "success": "#48BB78",
      "warning": "#ED8936",
      "error": "#F56565",
      "info": "#4299E1"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "'Comic Sans MS', cursive, sans-serif",
      "fallback": "system-ui, -apple-system, sans-serif"
    },
    "fontSizes": {
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px",
      "4xl": "36px"
    },
    "fontWeights": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px",
    "3xl": "64px"
  },
  "borderRadius": {
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "20px",
    "2xl": "25px",
    "full": "50%"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
  },
  "components": {
    "button": {
      "primary": {
        "background": "linear-gradient(135deg, #FF677D, #F8B400)",
        "color": "#FFFFFF",
        "padding": "12px 24px",
        "borderRadius": "25px",
        "fontWeight": 600
      },
      "secondary": {
        "background": "#FFFFFF",
        "color": "#FF677D",
        "border": "2px solid #FF677D",
        "padding": "12px 24px",
        "borderRadius": "25px",
        "fontWeight": 600
      }
    },
    "card": {
      "background": "#FFFFFF",
      "borderRadius": "20px",
      "padding": "24px",
      "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
      "border": "1px solid #E2E8F0"
    },
    "input": {
      "background": "#FFFFFF",
      "border": "2px solid #E2E8F0",
      "borderRadius": "12px",
      "padding": "12px 16px",
      "fontSize": "16px",
      "focus": {
        "borderColor": "#FF677D",
        "boxShadow": "0 0 0 3px rgba(255, 103, 125, 0.1)"
      }
    }
  },
  "breakpoints": {
    "mobile": "480px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1440px"
  }
}
